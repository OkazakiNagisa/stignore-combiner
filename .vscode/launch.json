{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Script Debug",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "script",
                "${file}"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}